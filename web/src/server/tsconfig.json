{
  "compilerOptions": {
    "module": "ES6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "outDir": "../dist",
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["node", "express"],
    "baseUrl": ".",
    "paths": {
      "@salesforce/*": ["./node_modules/@salesforce/*"],
      "salesforce": ["./types/salesforce.d.ts"],
      "*": ["./node_modules/*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node"
  },
  "include": ["./*", "./modules/*"],
  "exclude": ["./node_modules", "./static"],
  "typeAcquisition": { "enable": true }
}
